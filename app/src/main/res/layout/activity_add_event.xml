<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddEventActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">

    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DENUMIRE EVENIMENT"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/colorText"
        />

    <EditText
        android:id="@+id/et_event_name"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_event_name"
        android:singleLine="true"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:padding="6dp"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:backgroundTint="@color/colorTextBold"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_event_hour"
        android:layout_below="@+id/et_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORĂ DE ÎNCEPUT"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/colorText"
        />

        <TextView
            android:id="@+id/tv_pick_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click pentru a alege ora de inceput"
            android:layout_below="@id/tv_event_hour"
            android:textColor="@color/colorText"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:layout_marginTop="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="620dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:fabSize="mini"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:onClick="OnAddEvent"/>

    </RelativeLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>