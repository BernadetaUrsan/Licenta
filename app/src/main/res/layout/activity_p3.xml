<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.P3Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include layout="@layout/toolbar_with_back_button"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/toolbar_with_back_button">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:onClick="OnIS">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/tv_1"
                    android:scaleType="centerInside"
                    android:background="@drawable/border_blue"
                    android:alpha="0.7"/>


                <TextView
                    android:id="@+id/iv_ic1"
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    android:layout_centerVertical="true"
                   android:text="IS"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="110dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingineria Sistemelor"
                        android:layout_marginEnd="30dp"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_2"
                android:layout_width="match_parent"
                android:layout_below="@id/cv_1"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:onClick="OnCTI">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/tv_1"
                    android:scaleType="centerInside"
                    android:background="@drawable/border_blue"
                    android:alpha="0.7"/>

                <TextView
                    android:id="@+id/iv_ic2"
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    android:layout_centerVertical="true"
                    android:text="CTI RO"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="110dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculatoare și Tehnologia Informației - Română"
                        android:layout_marginEnd="30dp"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_3"
                android:layout_width="match_parent"
                android:layout_below="@id/cv_2"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:onClick="OnCTIEng">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/tv_1"
                    android:scaleType="centerInside"
                    android:background="@drawable/border_blue"
                    android:alpha="0.7"/>

                <TextView
                    android:id="@+id/iv_ic3"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    android:layout_centerVertical="true"
                    android:text="CTI Eng"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="110dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculatoare și Tehnologia Informației - Engleză"
                        android:layout_marginEnd="30dp"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_4"
                android:layout_width="match_parent"
                android:layout_below="@id/cv_3"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:onClick="OnInfo">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/tv_1"
                    android:scaleType="centerInside"
                    android:background="@drawable/border_blue"
                    android:alpha="0.7"/>

                <TextView
                    android:id="@+id/iv_ic4"
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    android:layout_centerVertical="true"
                    android:text="INFO"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="110dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="Informatică"
                        android:textColor="@color/colorText"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>