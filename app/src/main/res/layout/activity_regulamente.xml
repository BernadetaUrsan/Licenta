<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegulamenteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:onClick="OnBurse">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/tv_1"
                android:scaleType="centerInside"
                android:background="@color/colorPurple"
                android:alpha="0.7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGULAMENT BURSE"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_2"
            android:layout_width="match_parent"
            android:layout_below="@id/cv_1"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:onClick="OnCazare">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/tv_1"
                android:scaleType="centerInside"
                android:background="@color/colorPurple"
                android:alpha="0.7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGULAMENT CAZARE"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_3"
            android:layout_width="match_parent"
            android:layout_below="@id/cv_2"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:onClick="OnTabere">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/tv_1"
                android:scaleType="centerInside"
                android:background="@color/colorPurple"
                android:alpha="0.7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGULAMENT TABERE"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
        android:id="@+id/cv_4"
        android:layout_width="match_parent"
        android:layout_below="@id/cv_3"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:onClick="OnEvaluare">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/tv_1"
            android:scaleType="centerInside"
            android:background="@color/colorPurple"
            android:alpha="0.7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGULAMENT EVALUARE ȘI NOTARE"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_5"
            android:layout_width="match_parent"
            android:layout_below="@id/cv_4"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:onClick="OnSef">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/tv_1"
                android:scaleType="centerInside"
                android:background="@color/colorPurple"
                android:alpha="0.7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGULAMENT ALEGERE STUDENȚI REPREZENTANȚI"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textAlignment="center"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>