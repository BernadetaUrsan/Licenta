<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegulamenteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include layout="@layout/toolbar_with_back_button"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/toolbar_with_back_button">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:onClick="OnBurse">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/tv_1"
                android:scaleType="centerInside"
                android:background="@drawable/border_blue"
                android:alpha="0.7"/>


            <ImageView
                android:id="@+id/iv_ic1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic__money"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="90dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burse"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_2"
            android:layout_width="match_parent"
            android:layout_below="@id/cv_1"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:onClick="OnCazare">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/tv_1"
                android:scaleType="centerInside"
                android:background="@drawable/border_blue"
                android:alpha="0.7"/>

            <ImageView
                android:id="@+id/iv_ic2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_hotel"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="90dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cazare"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_3"
            android:layout_width="match_parent"
            android:layout_below="@id/cv_2"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:onClick="OnTabere">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/tv_1"
                android:scaleType="centerInside"
                android:background="@drawable/border_blue"
                android:alpha="0.7"/>

            <ImageView
                android:id="@+id/iv_ic3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_terrain"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="90dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tabere"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
        android:id="@+id/cv_4"
        android:layout_width="match_parent"
        android:layout_below="@id/cv_3"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:onClick="OnEvaluare">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/tv_1"
            android:scaleType="centerInside"
            android:background="@drawable/border_blue"
            android:alpha="0.7"/>

            <ImageView
                android:id="@+id/iv_ic4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_school"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="90dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="Evaluare și notare"
                android:textColor="@color/colorText"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"/>
            </LinearLayout>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_5"
            android:layout_width="match_parent"
            android:layout_below="@id/cv_4"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:onClick="OnSef">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/tv_1"
                android:scaleType="centerInside"
                android:background="@drawable/border_blue"
                android:alpha="0.7"/>

            <ImageView
                android:id="@+id/iv_ic5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_person"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="90dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alegere studenți reprezentanți"
                android:layout_marginEnd="30dp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textAlignment="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>