<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/border_blue"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/tv_materie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POO"
        android:layout_marginStart="30dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/iv_pauza"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_add_orar_black"
        android:visibility="invisible"
        android:onClick="onAddTimetable"
        />

    <TextView
        android:id="@+id/tv_sala"
        android:layout_below="@+id/tv_materie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASPC 5"
        android:layout_marginStart="30dp"
        android:textColor="@color/colorTextSters"
        android:textSize="14sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/tv_oraStart"
        android:layout_toStartOf="@+id/tv_oraStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:text="12:00"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@color/colorPurple"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/tv_oraStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:text="14:00"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="normal"
        android:background="@color/colorTextButtonSters"
        android:padding="4dp"
        />

</RelativeLayout>