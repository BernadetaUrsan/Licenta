<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_year"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_cardview_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mm"
                    android:scaleType="centerCrop"
                    android:alpha="0.7"/>

                <View
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:layout_alignParentEnd="true"
                    android:background="#e6e9ef"/>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center|end">

                    <TextView
                        android:id="@+id/tv_cardview_yeargroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Year group"
                        android:textSize="30sp"
                        android:textAppearance="@color/colorText"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/iv_cardview_group_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/mm"
                        android:layout_below="@+id/tv_cardview_yeargroup"
                        />
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_park"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/cv_year">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_cardview_parking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/park"
                    android:scaleType="centerCrop"
                    android:alpha="0.7" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:alpha="0.5"
                    android:background="#e6e9ef"/>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:gravity="center|end"
                    >

                    <TextView
                        android:id="@+id/tv_cardview_parking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Parking"
                        android:textSize="30sp"
                        android:textAppearance="@color/colorText"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/iv_cardview_parking_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/mm"
                        android:layout_below="@+id/tv_cardview_parking"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_news"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/cv_park">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_cardview_news"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/news"
                    android:scaleType="centerCrop"
                    android:alpha="0.7" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:layout_alignParentEnd="true"
                    android:background="#e6e9ef"/>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:gravity="center|end"
                    >

                    <TextView
                        android:id="@+id/tv_cardview_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="News"
                        android:textSize="30sp"
                        android:textAppearance="@color/colorText"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/iv_cardview_news_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/mm"
                        android:layout_below="@+id/tv_cardview_news"
                        />


                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_schedule"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/cv_news">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_cardview_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sche"
                    android:scaleType="centerCrop"
                    android:alpha="0.7" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:layout_alignParentEnd="true"
                    android:background="#e6e9ef"/>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:gravity="center|end"
                    >

                    <TextView
                        android:id="@+id/tv_cardview_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Schedules"
                        android:textSize="30sp"
                        android:textAppearance="@color/colorText"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/iv_cardview_schedule_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/mm"
                        android:layout_below="@+id/tv_cardview_schedule"
                        />


                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_calendar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/cv_schedule">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_cardview_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ex"
                    android:scaleType="centerCrop"
                    android:alpha="0.7" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:layout_alignParentEnd="true"
                    android:background="#e6e9ef"/>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:gravity="center|end"
                    >

                    <TextView
                        android:id="@+id/tv_cardview_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Calendar"
                        android:textSize="30sp"
                        android:textAppearance="@color/colorText"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/iv_cardview_calendar_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/mm"
                        android:layout_below="@+id/tv_cardview_calendar"
                        />


                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>