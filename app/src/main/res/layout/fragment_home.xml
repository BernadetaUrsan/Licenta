<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_year"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_cardview_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/rl_grup"
                    android:scaleType="centerInside"
                    android:src="@drawable/grup"

                    android:alpha="0.7"/>

                <View
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:layout_alignParentEnd="true"
                    android:background="#e6e9ef"/>

                <RelativeLayout
                    android:id="@+id/rl_grup"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center|end">

                    <TextView
                        android:id="@+id/tv_cardview_yeargroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Grup de an"
                        android:textSize="24sp"
                        android:textAppearance="@color/colorText"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp"/>

<!--                    <ImageView-->
<!--                    android:id="@+id/iv_cardview_group_pic"-->
<!--                    android:layout_width="60dp"-->
<!--                    android:layout_height="60dp"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:src="@drawable/ic_stud"-->
<!--                    android:layout_below="@+id/tv_cardview_yeargroup"-->
<!--                    />-->
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_park"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/cv_year">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_cardview_parking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/parcari"
                    android:layout_toStartOf="@+id/rl_parcare"
                    android:scaleType="centerInside"
                    android:alpha="0.7" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:alpha="0.5"
                    android:background="#e6e9ef"/>

                <RelativeLayout
                    android:id="@+id/rl_parcare"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:gravity="center|end"
                    >

                    <TextView
                        android:id="@+id/tv_cardview_parking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Grup șoferi"
                        android:textSize="24sp"
                        android:layout_marginEnd="16dp"
                        android:textAppearance="@color/colorText"
                        android:textStyle="bold"
                        />
<!--                    <ImageView-->
<!--                        android:id="@+id/iv_cardview_parking_pic"-->
<!--                        android:layout_width="60dp"-->
<!--                        android:layout_height="60dp"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:src="@drawable/mm"-->
<!--                        android:layout_below="@+id/tv_cardview_parking"-->
<!--                        />-->
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_news"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_below="@id/cv_park">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_cardview_news"
